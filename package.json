{
  "name": "node-boilerplate",
  "version": "1.0.0",
  "description": "A Node.js project setup with React and ES6.",
  "main": "index.js",
  "scripts": {
    "build": "mkdir -p build/server && babel -d build/server src/server && babel -d build/test src/test",
    "test": "npm run build && mocha --compilers js:babel/register build/test",
    "start": "supervisor -w build/server -n exit build/server/start.js",
    "lint": "eslint src",
    "build:server": "mkdir -p build/server && babel -w -d build/server src/server",
    "test:server": "mocha --compilers js:babel/register test/http",
    "build:client": "mkdir -p build/client && watchify -v -o build/client/bundle.js src/client/main.js "
  },
  "author": "Jack Huang",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.14.0",
    "bootstrap": "^3.3.5",
    "colors": "^1.1.2",
    "cookie-parser": "^1.3.5",
    "ejs": "^2.3.4",
    "express": "^4.13.3",
    "jquery": "^2.1.4",
    "react": "^0.13.3",
    "react-bootstrap": "^0.25.2",
    "request": "^2.62.0",
    "uuid": "^2.0.1",
    "winston": "^1.0.1"
  },
  "devDependencies": {
    "babel": "^5.8.23",
    "babel-eslint": "^4.1.3",
    "babelify": "^6.3.0",
    "brfs": "^1.4.1",
    "eslint": "^1.4.3",
    "mocha": "^2.3.2",
    "supervisor": "^0.7.1",
    "watchify": "^3.4.0"
  },
  "browserify": {
    "transform": [
      [
        "babelify"
      ],
      [
        "brfs"
      ]
    ]
  }
}
